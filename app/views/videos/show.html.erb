	<style type="text/css">
		#video_div { display:block; top: 10px; left: 10px;  }
		#video_source { width: 200px; }
	</style>
	<%= javascript_include_tag "player/AC_OETags" %>
	<%= javascript_include_tag "player/akamai_player" %>
	
	<script type="text/javascript">
		$(function() {
			$().Akamai();
						
			$("#video_div").Akamai('loadVideo', {
				videosrc: $("#video_source option:first").val(),
				baseurl: "http://special.hkjc.com/promo/ch/",
				width: 440,
				height: 350
			});

			$("#video_source").change(function(e) {
				$("#video_div").Akamai('loadVideo', {
					videosrc: $(this).val(),
					iossrc: $("#video_source option:selected").data("iossrc")
				});
			});

			$("#show_meter").change(function(e) {
				if ($(this).is(":checked") == true) {
					$("#video_div").Akamai('loadVideo', {
						videosrc: $("#video_source").val(),
						showMeter: true
					});
				} else {
					$("#video_div").Akamai('loadVideo', {
						videosrc: $("#video_source").val(),
						showMeter: false
					});
				}
			});
			
			$("#show_quality_button").change(function(e) {
				if ($(this).is(":checked") == true) {
					$("#video_div").Akamai('loadVideo', {
						videosrc: $("#video_source").val(),
						qualityBtn: true
					});
				} else {
					$("#video_div").Akamai('loadVideo', {
						videosrc: $("#video_source").val(),
						qualityBtn: false
					});
				}
			});
		});
	</script>
	<div class="section">
		<div class="box medium">
			<div class="title">
				<h2>Video Information</h2>
				<span class="hide"></span>
			</div>
			<div class="content">
				<h3>Filename</h3>
				<%= @video.filename %><br />
								<br />

				<h3>Published Since</h3>
				<%= @video.created_at %>
				<br /><br />
				<h3>Age</h3>
				<%= distance_of_time_in_words(Time.now, @video.created_at) %>
				<br /><br />
				<h3>M3U8</h3>
				<%= @video.m3u8 %>
				<br /><br />
				<h3>SMIL</h3>
				<%= @video.smil %>
			</div>
			
		</div>
		<div class="box medium">
			<div class="title">
				<h2>Preview</h2>
				<span class="hide"></span>
			</div>
			<div class="content" style="height:380px;">
				<div id="video_div" style="display: block;" >
				&nbsp;
			</div>

			<div id="playlist_div" style="display:none;">
				<form action="" id="playlist">
					<p><label for="playlist">Video Source</label><br />
						<select name="video_source" id="video_source">
							<option value="<%= @video.smil%>">DEMO</option>

						</select>
					</p>
					<p>
						<input type="checkbox" name="show_meter" value="" id="show_meter" /> <label for="show_meter">Show Meter</label>
					</p>
					<p>
						<input type="checkbox" name="show_quality_button" value="" id="show_quality_button" checked="checked" /> <label for="show_quality_button">Show Quality Selection</label>
					</p>
				</form>
			</div></div>
		</div>
		

	</div>
